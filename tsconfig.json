{
  "include": ["src/ts/**/*.ts", "src/ts/**/*.tsx"],
  "exclude": ["src/ts/index.tsx", "src/ts/placeholder.tsx"],
  "compilerOptions": {
    "outDir": "src/js/",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "preserveValueImports": true
  }
}
